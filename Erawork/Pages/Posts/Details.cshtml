@page
@using Data.Models;
@model Erawork.Pages.Posts.DetailsModel
@{
}

<main id="wt-main" class="wt-main wt-haslayout wt-innerbgcolor">
	<div class="wt-haslayout wt-main-section">
		<!-- User Listing Start-->
		<div class="container">
			<div class="row">
				<div id="wt-twocolumns" class="wt-twocolumns wt-haslayout">
					<div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 float-left">
						<div class="wt-proposalholder">
							<span class="wt-featuredtag"><img src="~/assets/images/featured.png" alt="img description" data-tipso="Plus Member" class="template-content tipso_style"></span>
							<div class="wt-proposalhead">
								<h2>@Model.currentPost.PostTitle</h2>
								<ul class="wt-userlisting-breadcrumb wt-userlisting-breadcrumbvtwo">
									<li><span> Budgets: @Model.currentPost.Budget <i class="fa fa-dollar-sign"></i></span></li>

									@switch (Model.currentPost.PostStatus)
									{
										case "On going":
											<li><span><i class="fa-solid fa-circle" style="color: cornflowerblue"></i> @Model.currentPost.PostStatus</span></li>
											break;
										case "Canceled":
											<li><span><i class="fa-solid fa-circle" style="color: red"></i>@Model.currentPost.PostStatus</span></li>
											break;
										case "Draft":
											<li><span><i class="fa-solid fa-circle" style="color: antiquewhite"></i>@Model.currentPost.PostStatus</span></li>
											break;
									}
									
									<li><span><i class="far fa-folder"></i> Category: @Model.currentPost.Category.CategoryName</span></li>
									<li><span><i class="far fa-clock"></i> Posted date: @Model.currentPost.PostedDate</span></li>
									
								</ul>
							</div>
							<div class="wt-btnarea"><a href="javascrip:void(0);" class="wt-btn">Send Proposal</a></div>
						</div>
					</div>
					<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 float-left">
						<div class="wt-projectdetail-holder">
							<div class="wt-projectdetail">
								<div class="wt-title">
									<h3>Project Detail</h3>
								</div>
								<div class="wt-description">
									@Html.Raw(Model.currentPost.PostDetails)
								</div>
							</div>

						</div>
					</div>
					
				</div>
			</div>
		</div>
		<!-- User Listing End-->
	</div>
</main>
