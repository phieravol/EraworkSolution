@page
@model Erawork.Pages.Services.Provider.DeleteModel
@{
    string defaultServiceImg = "assets/images/services/default_service.png";
}

<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="wt-dashboardboxtitle">
            <h2>Delete Service</h2>
        </div>
        <div class="wt-dashboardboxcontent">
            <form method="post" enctype="multipart/form-data" class="wt-formtheme wt-formprojectinfo wt-formcategory">

                <div class="form-group">
                    <span class="form-group-description">Service Name</span>
                    <input type="text" asp-for="@Model.service.ServiceTitle" class="form-control" placeholder="Name" disabled>
                </div>
                <div class="form-group">
                    <span class="form-group-description">Select Service Status</span>

                    <span class="wt-select">
                        <select asp-for="@Model.service.isServiceActive" disabled>
                            <option value="@(Model.service.isServiceActive==true ? "selected": "")">Active</option>
                            <option value="@(Model.service.isServiceActive==false ? "selected": "")">Inactive</option>
                        </select>
                    </span>
                </div>
                <div class="form-group">
                    <span class="form-group-description">Enter Service Description</span>
                    <textarea asp-for="@Model.service.ServiceIntro" class="form-control" placeholder="Description" disabled>@Model.service.ServiceIntro</textarea>

                </div>
                <div class="form-group form-group-label">
                    <div class="wt-labelgroup">
                        <label>
                            <figure><img height="100px" width="100px" src="~/@(Model.service.ServiceImage==null ? defaultServiceImg : Model.service.ServiceImage)" alt="img description"></figure>
                        </label>

                    </div>
                </div>
                <div class="form-group wt-btnarea">
                    <button class="wt-btn">Delete Service</button>
                </div>
            </form>
        </div>
    </div>
</div>